<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:layout_marginBottom="15dp"
    android:visibility="visible"
    app:cardCornerRadius="9dp"
    app:cardElevation="4dp">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:visibility="visible"
            app:cardCornerRadius="9dp">


            <!--            <ImageView-->
            <!--                android:id="@+id/slider_image_xml"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="165dp"-->
            <!--                android:scaleType="fitXY"-->
            <!--                android:src="@drawable/slider_fastfood" />-->


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/custom_dialog_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/slider_kacchi"
                    android:scaleType="centerCrop"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cupon_gradient" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"

                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/slider_name_xml"
                            android:layout_width="match_parent"
                            android:layout_marginRight="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginBottom="25dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/adornoirrit_bold"
                            android:maxLines="1"
                            android:text="Sultans Dine"
                            android:textColor="@color/white"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


            </FrameLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/food_list_type"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:background="@drawable/corner_button"
                android:fontFamily="@font/adornoirrit_semibold"
                android:text="ফাস্টফুড"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/food_list_rating"
                    android:layout_width="72dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/corner_button2"
                    android:backgroundTint="@color/appred"
                    android:fontFamily="@font/adornoirrit_semibold"
                    android:text="রেটিং: 4.4"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <TextView

                    android:id="@+id/food_list_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/adornoirrit_regular"
                    android:paddingLeft="18dp"
                    android:paddingTop="20dp"
                    android:text="রিভিউ দিয়েছেন ১৮০০ জন"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/appred"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/slider_offer_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/adornoirrit_bold"
                    android:gravity="right"
                    android:maxLines="2"
                    android:paddingRight="18dp"
                    android:text="FOOD45+ 50% off"
                    android:textColor="@color/appred"
                    android:textSize="20dp"
                    android:textStyle="bold" />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/close_button"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="right"
                    android:background="@drawable/corner_button2"
                    android:backgroundTint="@color/appred"
                    android:fontFamily="@font/adornoirrit_semibold"
                    android:text="Close"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                   />



            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



